<Window x:Class="WpfClient_UdpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient_UdpClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        
    <Grid x:Name="Gridd" Background="YellowGreen">

        <Image Name="ScrenImage" HorizontalAlignment="Left" Height="{Binding ElementName=Gridd,XPath=MaxHeight}" Margin="10" VerticalAlignment="Top" Width="{Binding ElementName=Gridd,XPath=MaxWidth}"/>

        <Button Content="StartShere" HorizontalAlignment="Left" Margin="50 0 0 20" VerticalAlignment="Bottom" Height="50" Width="200" Click="Button_Click"/>
        <Button Content="StopShere" HorizontalAlignment="Right" Margin="0 0 50 20" VerticalAlignment="Bottom" Height="50" Width="200" Click="Button_Click_1"/>

    </Grid>
</Window>
